<div class="col-md-4 mk-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nueva Nota</h3>
    </div>
    <div class="card-body">
        <form action="/notes/new-notes" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" placeholder="descripcion"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>